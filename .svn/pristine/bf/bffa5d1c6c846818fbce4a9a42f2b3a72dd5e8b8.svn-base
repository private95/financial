<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8"></meta>
    <meta name="viewport" content ="width=device-width,initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="edge" >
	<meta name="renderer" content="webkit|ie-comp|ie-stand">
    <title>理财百科</title>
    <link rel="shortcut icon" href="imagse/favicon.ico">
    <link rel="stylesheet" href="css/base.css"/>
    <link rel="stylesheet" href="css/login_register.css"/>
</head>
<body>
<!--头部-->
    <header id="header">
        <!--导航-->
        <div id="navs"></div>
        <div id="header_box"></div>
        <div class="groom">
            <p>登陆与注册</p>
            <ul>
                <li><a href="index">首页</a></li>
                <li>></li>
                <li><a href="#content1">登陆</a></li>
                <li>和</li>
                <li><a href="#content2">注册</a></li>
            </ul>
        </div>
    </header>
<!--主体-->
<section id="main">
    <div class="main_page">
        <div class="page">
            <div class="page_1">
                <a class=" page_rt" data-toggle="tab" href="#content1">登陆</a>
                <a class="active" data-toggle="tab" href="#content2">注册</a>
            </div>
            <div class="sign_box">
                <!--登陆-->
                <div class="sign_in" id="content1">
                    <ul>
                        <li>
                            <label>
                                <input class="ipt" name="account" id="account" type="text" placeholder="请输入用户"/>
                            </label>
                        </li>
                        <li>
                            <input class="ipt ipt_ps" name="password" id="password" type="text" placeholder="请输入密码"/>
                        </li>
                        <li class="ipt_2">
                            <p>
                                <input type="checkbox"/>
                                <span>下次自动登录</span>
                            </p>
                            <a class="forget" href="#">忘记密码</a>
                        </li>
                        <li>
                            <input type="submit" class="sbt" value="登陆"/>
                        </li>
                        <li class="spt">
                            <span>- - - - - - - 第三方账号登录 - - - - - - -</span>
                        </li>
                        <li class="ipt_3">
                            <p>
                                <a href="#" class="page_lt"></a>
                                <a href="#" class="page_rt"></a>
                            </p>
                        </li>
                    </ul>
                </div>
                <!--注册-->
                <div class="sign_in show" id="content2">
                    <ul>
                        <li>
                            <label>
                                <input class="ipt" name="raccount" id="raccount" type="text" placeholder="请输入用户"/>
                            </label>
                        </li>
                        <li class="register">
                            <label>
                                <input class="register_1" type="text" placeholder="请输入短信验证"/>
                            </label>
                            <button class="btn-primary">获取验证码</button>
                        </li>
                        <li>
                            <input class="ipt ipt_ps" name="rpassword" id="rpassword" type="text" placeholder="请输入新登陆密码"/>
                        </li>
                        <li>
                            <input class="ipt ipt_ps" name="rrpassword" id="rrpassword" type="text" placeholder="请再次输入密码"/>
                        </li>
                        <li>
                            <input type="button" onclick="register();" class="sbt" value="注册"/>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--重置密码-->
        <div class="page reset">
            <p>重置密码</p>
            <div class="sign_in">
                <ul>
                    <li>
                        <label>
                            <input class="ipt" type="text" placeholder="请输入用户"/>
                        </label>
                    </li>
                    <li class="register">
                        <label>
                            <input class="register_1" type="text" placeholder="请输入短信验证"/>
                        </label>
                        <button class="btn-primary">获取验证码</button>
                    </li>
                    <li>
                        <input class="ipt ipt_ps" type="text" placeholder="请输入新登陆密码"/>
                    </li>
                    <li>
                        <div class="reset_1">
                            <a class="lt_zc" href="register.html">免费注册</a>
                            <a class="rt_dl" href="login_page.html">返回登录</a>
                        </div>
                    </li>
                    <li>
                        <input type="submit" class="sbt" value="确认"/>
                    </li>
                </ul>
            </div>
        </div>
    </div>
   
    <div class="main_bac"></div>
</section>
<!--底部-->
<footer id="foot"></footer>
</body>
<script src="js/jquery-1.11.3.js"></script>
<script src="js/common.js"></script>
<script src="js/login_register.js"></script>
</html>