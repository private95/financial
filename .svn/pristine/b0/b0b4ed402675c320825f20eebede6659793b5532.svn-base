function loginSubmit(){
	//alert()
	//验证不能为空
    var $account = $("#account").val();
    var $password = $("#password").val();
    var arry=[{"name":"account","data":$account},{"name":"password","data":$password}];
    for(var i=0;i<arry.length;i++){
    	if(arry[i].data==''){
    		Loing(arry[i].name);
    		 return
