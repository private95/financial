            },
            success: function(data) {
            	console.log(data)
            	
                if(data == 1){
                	 localStorage.setItem("login", "yes");
                     localStorage.setItem("username", $account)
                	if($('#remeBer').is(":checked")){
                 		setCookie("username", $account,1)
                 		
                 	}
                	layer.msg("登录成功")
                	setTimeout(function(){
                		location.href="/"
                	},1500)
                	 
                }else{
                	 $('.error').show();
                	//$("#accountPenl").html("您输入的账户名或密码错误");
                   // location.href="#";
                    //undisabledloginbtn();
                	 //location.href="/";
                }
            },
            error:function(){
            	layer.open({
            		  title: '提示信息',
            		  content: '链接服务器出错了...'
            	}); 
            }
        });
    }

  
    
}
