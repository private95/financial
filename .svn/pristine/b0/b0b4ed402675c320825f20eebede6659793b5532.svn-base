    }
    //
    function  Loing(name){
    	var newAarry=[{"name":"account","data":"用户名不能为空"},{"name":"password","data":"密码不能为空"}];
    	for(var j=0;j<newAarry.length;j++){
    		if(newAarry[j].name==name){
    			layer.open({
