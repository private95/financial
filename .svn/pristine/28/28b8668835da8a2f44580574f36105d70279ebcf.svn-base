/*登陆*/

#main>.main_page .page{
    width: 380px;
    margin: 30px auto;
    border:1px solid #EBEBEB;
    box-sizing: border-box;
    min-height: 480px;
}
#main>.main_page .page_1{
    height: 65px;
    line-height: 65px;
    display: flex;
    background-color: #FAFAFA;
    border-bottom:1px solid #EBEBEB;
}
#main>.main_page .page_1 a{
    display: inline-block;
    text-align: center;
    width: 190px;
    font-size: 18px;
    color: #43464F;
}
#main>.main_page .page_1 a:hover{
    color:#F76707 ;
}

#main>.main_page .page_1 .page_rt{
    border-right: 1px solid #EBEBEB;
}
#main>.main_page .page_1 .active{
    background-color: #ffffff;
    border-bottom: 1px solid transparent;
    height: 66px;
}
.sign_in{
    padding: 40px;
    display: none;
}
#main>.main_page .sign_in .ractive{
    border:1px solid red;
    color: red;
}

#main .sign_in .ipt{
    width: 100%;
    height: 50px;
    margin-bottom: 20px;
    box-sizing: border-box;
    line-height: 50px;
    font-size: 14px;
    padding:5px 0 5px 35px;
    border: 1px solid #e0e3ec;
    box-shadow: inset 0 0 0 rgba(0,0,0,.075);
    background: url(../imagse/login_page/touxiang1.png) no-repeat 10px center scroll;
}

#main .sign_in .ipt2{
    width: 100%;
    height: 50px;
    margin-bottom: 20px;
    box-sizing: border-box;
    line-height: 50px;
    font-size: 14px;
    padding:5px 0 5px 35px;
    border: 1px solid #e0e3ec;
    box-shadow: inset 0 0 0 rgba(0,0,0,.075);
    background: url(../imagse/login_page/email.png) no-repeat 10px center scroll;
}
#main>.main_page .sign_in .ipt_ps{
    background: url(../imagse/login_page/mima.png) no-repeat 10px center scroll;
    
}
#main>.main_page .ipt_2{
    font-size: 15px;
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
}
#main>.main_page .ipt_2 .forget{
    color: #0FAEFF;
}
#main>.main_page .ipt_2 p{
    display: inline-block;
}
#main>.main_page .sbt{
    width: 100%;
    height: 50px;
    box-sizing: border-box;
    border:0;
    background-color: #0FAEFF;
    color: #ffffff;
    font-size: 18px;
}
#main>.main_page .sbt:hover{
    background-color: #0C9BC0;
    cursor:pointer;
}
#main>.main_page .sign_in .spt{
    text-align: center;
}
#main>.main_page .sign_in .spt span{
    display: inline-block;
    font-size: 16px;
    color: #A6ACBC;
    margin-top: 20px;
}
#main>.main_page .sign_in .ipt_3 p{
    display: flex;
    justify-content: center;
}
#main>.main_page .sign_in .ipt_3 a{
    display:block;
    width: 50px;
    height: 50px;
    margin: 0 auto;
    margin-top:20px;
}
#main>.main_page .sign_in .page_lt{
    background-image: url(../imagse/login_page/weixin1.png);
}
#main>.main_page .sign_in .page_lt:hover{
    background-image: url(../imagse/login_page/weixin2.png);
}

#main>.main_page .sign_in .page_rt{
    background-image: url(../imagse/login_page/qq1.png);
}
#main>.main_page .sign_in .page_rt:hover{
    background-image: url(../imagse/login_page/qq2.png);
}

/*注册*/
#main>.main_page .show{
    display: block;
}
#main>.main_page .register{
    display: flex;
}
#main>.main_page .register .btn-primary{
    width: 88px;
    height: 50px;
    background-color: #0FAEFF;
    border:0;
    color: #ffffff;
    outline: none;
}
#main>.main_page .register .btn-primary:hover{
    background-color: #0C9BC0;
    cursor:pointer;
}

#main>.main_page  .register_1{
    width: 210px;
    height: 50px;
    margin-bottom: 20px;
    box-sizing: border-box;
    line-height: 50px;
    font-size: 14px;
    padding: 5px 0 5px 15px;
    border: 1px solid #e0e3ec;
    box-shadow: inset 0 0 0 rgba(0, 0, 0, .075);
}

/*重置密码*/
#main>.main_page .reset{
    display: none;
}
#main>.main_page .reset p{
    text-align: center;
    height: 65px;
    line-height: 65px;
    font-size: 18px;
}
#main>.main_page .reset .sign_in {
    padding-top:0;
}
#main>.main_page .reset_1{
    display: flex;
    justify-content:space-between;
    margin-bottom: 20px;
}
#main>.main_page .reset_1 a{
    font-size: 14px;
    color: #0FAEFF;
}
#main>.main_page .reset_1 a:hover{
    color: #E46B1C;
}

/*主体背景*/
#main_bac{
	clear:both;
    width: 100%;
    height: 249px !important;
    background-image: url(../imagse/login_page/beijing.png);
}

